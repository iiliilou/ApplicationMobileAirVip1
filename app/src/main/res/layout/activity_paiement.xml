<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".view.PaiementActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paiement"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/editNumeroCarte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numéro de carte"
            android:inputType="number"
            android:maxLength="16" />

        <EditText
            android:id="@+id/editNomCarte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom sur la carte"
            android:inputType="textPersonName"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editExpiration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date d'expiration (MM/AA)"
            android:inputType="text"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editCVV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Code de sécurité (CVV)"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnPayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payer maintenant"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FFC107"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</ScrollView>
