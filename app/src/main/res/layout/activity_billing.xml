<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".BillingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adresse de facturation"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/editPrenom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prénom"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom"
            android:inputType="textPersonName"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editAdresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adresse (rue, numéro)"
            android:inputType="textPostalAddress"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editVille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ville"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editProvince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Province / État"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editCodePostal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Code postal"
            android:inputType="textPostalAddress"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editPays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pays"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editTelephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Téléphone"
            android:inputType="phone"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnConfirmerAdresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmer"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FFC107"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</ScrollView>
