<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="#DDDDDD"
    app:strokeWidth="1dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Heures et aéroports -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="16dp"
                android:layout_height="1dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <!-- ajout d'un icone  -->
            <ImageView
                android:id="@+id/companyLogo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@string/logo_compagnie_flightitem"
                android:src="@drawable/ic_plane"
                tools:ignore="ImageContrastCheck" />
        </LinearLayout>

        <TextView
            android:id="@+id/airportRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yul_cun_flightitem"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />

        <!-- Infos durée et escales -->
        <TextView
            android:id="@+id/flightDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1_escale_ywg_24_h_34_min_flightitem"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Infos supplémentaires (compagnie, remarques) -->
        <TextView
            android:id="@+id/flightDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/airvip_31_d_missions_flightitem"
            android:textColor="#00796B"
            android:textSize="13sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/flightWarnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/escale_de_nuit_billets_s_par_s_flightitem"
            android:textColor="#D32F2F"
            android:textSize="13sp"
            android:layout_marginTop="2dp" />

        <!-- Ligne séparation -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginVertical="8dp" />

        <!-- Prix + type de billet -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/flightPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_16_046_ca_flightitem"
                android:textColor="#EF6C00"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/flightType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aller_retour_flightitem"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginStart="12dp" />


        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>